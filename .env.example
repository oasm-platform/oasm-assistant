# ============================
# OASM ASSISTANT - ENV CONFIG
# ============================

# DATABASE
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=oasm_assistant
POSTGRES_HOST=oasm-assistant-postgresql
POSTGRES_PORT=9432

# REDIS
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_DECODE_RESPONSES=true

# APPLICATION
APP_HOST=0.0.0.0
APP_PORT=8000
LOG_LEVEL=INFO
PYTHONUNBUFFERED=1

# LLM
LLM_PROVIDER=ollama
LLM_API_KEY=
LLM_MODEL_NAME=llama3
LLM_BASE_URL=http://localhost:8005
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4096
LLM_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_MIN_CHUNK_SIZE=5
LLM_GPU_MEMORY_UTILIZATION=0.85
LLM_TENSOR_PARALLEL_SIZE=1

# EMBEDDING
EMBEDDING_PROVIDER=huggingface
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_BASE_URL=
EMBEDDING_API_KEY=
EMBEDDING_DIMENSIONS=384
EMBEDDING_TOKEN_LIMIT=512
EMBEDDING_ORG_ID=

# SERVICES
SEARXNG_URL=http://oasm-assistant-searxng:8080
SEARXNG_SECRET=your_random_secret_key_here
SEARXNG_BASE_URL=http://localhost:8080/

OASM_CORE_API_URL=http://localhost:6276
OASM_CLOUD_APIKEY=change_me

NUCLEI_TEMPLATES_SYNC_TIME="0 0 * * *"
NUCLEI_TEMPLATES_REPO_URL=https://github.com/projectdiscovery/nuclei-templates.git
NUCLEI_TEMPLATES_CLONE_DIR=nuclei-templates

DOMAIN_CLASSIFIER_MIN_LABELS=3
DOMAIN_CLASSIFIER_MAX_LABELS=5
DOMAIN_CLASSIFIER_MAX_RETRIES=3
