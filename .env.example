# OASM Assistant Environment Configuration

# Application Settings
APP_NAME=OASM Assistant
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://oasm:oasm123@localhost:5432/oasm_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# AI/LLM API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# LangChain/LangSmith Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=oasm-assistant

# Vector Database Configuration
VECTOR_STORE_TYPE=chromadb
CHROMA_HOST=localhost
CHROMA_PORT=8000
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Security Tools Configuration
NUCLEI_TEMPLATES_PATH=data/nuclei_templates
NUCLEI_UPDATE_CHECK=true
NMAP_PATH=/usr/bin/nmap
SUBFINDER_PATH=/usr/bin/subfinder
HTTPX_PATH=/usr/bin/httpx

# Security Scanner Settings
DEFAULT_SCAN_TIMEOUT=1800
MAX_CONCURRENT_SCANS=5
SCAN_RATE_LIMIT=100

# Knowledge Base Settings
KNOWLEDGE_BASE_UPDATE_INTERVAL=3600
AUTO_SYNC_NUCLEI_TEMPLATES=true
WEB_SEARCH_ENABLED=true
WEB_SEARCH_RATE_LIMIT=10

# Authentication & Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
API_TOKEN=your_api_token_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Monitoring & Metrics
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# File Upload Settings
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,txt,md,yaml,yml

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External Services
THREAT_INTEL_FEEDS=
EXTERNAL_API_TIMEOUT=30